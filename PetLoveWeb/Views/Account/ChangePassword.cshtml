@model PetLoveWeb.Models.ChangePasswordModel

@{
    ViewBag.Title = "Meus Dados";
}

<h2>Alterar Meus Dados</h2>
<p>
    Utilize o formulário abaixo para alterar seus dados.
</p>
<p>
    A nova senha exije um mínimo de @Membership.MinRequiredPasswordLength caracteres.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Não foi possível alterar senha. Favor corrijir os erros e tentar novamente.")
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.Label("Nome Completo")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.NomeCompleto, new { style = "width:350px" })
                @Html.ValidationMessageFor(m => m.NomeCompleto)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { disabled = "disabled" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { style = "width:350px" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.Label("Telefone")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Telefone)
            </div>

            <div class="editor-label">
                @Html.Label("Senha Antiga")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>

            <div class="editor-label">
                @Html.Label("Nova Senha")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>

            <div class="editor-label">
                @Html.Label("Confirmar Nova Senha")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <p>
                <input class="but but-success but-shadow but-rc" type="submit" value="Alterar dados" />
            </p>
        </fieldset>
    </div>
}
